<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:ProgettoEsame.ViewModel"
             mc:Ignorable="d"
             x:Class="ProgettoEsame.View.CorsoDetailsPage2">
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <vm:CorsoDetailsVM2 x:Key="vm"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add"
                     Clicked="ToolbarItem_Clicked"/>
    </ContentPage.ToolbarItems>


    <ContentPage.Content>
        <StackLayout BindingContext="{StaticResource vm}"
                     Spacing="10" Margin="10,0" Padding="15" Visual="Default" Orientation="Vertical" VerticalOptions="FillAndExpand" HorizontalOptions="Fill">
            <StackLayout>
            <Label Margin="0,10,0,0"
                   Text="{Binding Name, Mode=TwoWay}"/>
            <Label  Margin="0,10,0,0"
                   Text="{Binding NameProf, Mode=TwoWay}"/>
            <Label Margin="0,10,0,0"
                   Text="{Binding EmailProf, Mode=TwoWay}"/>
            <Label Margin="0,10,0,0" 
                   Text="{Binding NumCFU, Mode=TwoWay}"/>
                <Button Text="Modifica Corso" Clicked="DettaglioCorsoClicked"/>
            </StackLayout>

            <ListView BindingContext="{StaticResource vm}" 
                  RowHeight="70" 
                  BackgroundColor="LightBlue"
                  ItemsSource="{Binding Appunti}"
                  SelectedItem="{Binding SelectedAppunto, Mode=TwoWay}">
                <ListView.ItemTemplate>
                    <DataTemplate>

                        <ViewCell>
                            <StackLayout HorizontalOptions="FillAndExpand" Orientation="Horizontal" Padding="8,10,10,15">
                                <StackLayout HorizontalOptions="StartAndExpand" Orientation="Vertical" Padding="5">
                                    <Label HorizontalOptions="Start" FontSize="24" FontAttributes="Bold" TextColor="Black" Text="{Binding Name}"/>
                                </StackLayout>
                                <StackLayout HorizontalOptions="End" Orientation="Vertical" Padding="5">
                                    <Label HorizontalOptions="End" FontSize="14" TextColor="Black" Text="{Binding Description}"/>
                                </StackLayout>
                            </StackLayout>
                        </ViewCell>

                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>